{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "shitbot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/shitbot/main.js",
            "env": {
                "DB_HOST": "localhost",
                "SPOTIFY_REFRESH_TOKEN_LOCATION": "${workspaceFolder}/shitbot/debug/spotify_refresh_token.txt",
            }
        },
        {
            "name": "Attach to API (Docker)",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}/api",
            "remoteRoot": "/app",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ]
}