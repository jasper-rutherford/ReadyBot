{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "shitbot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/shitbot/main.js",
            "env": {
                "DB_HOST": "localhost",
                "SPOTIFY_REFRESH_TOKEN_LOCATION": "${workspaceFolder}/shitbot/debug/spotify_refresh_token.txt",
            }
        },
        {
            "name": "Attach to API (Docker)",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 3301, // this MUST match "API_DEBUG_PORT" in the .env
            "restart": true,
            "localRoot": "${workspaceFolder}/api",
            "remoteRoot": "/app",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "name": "Attach to the Discord Bot (Docker)",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 3302, // this MUST match "DISCORD_DEBUG_PORT" in the .env
            "restart": true,
            "localRoot": "${workspaceFolder}/discord",
            "remoteRoot": "/app",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Unit Tests API",
            "preLaunchTask": "prep-unit-tests-api",
            "cwd": "${workspaceFolder}/api",
            "program": "${workspaceFolder}/api/node_modules/jest/bin/jest.js",
            "args": ["--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "DB_HOST": "localhost"
            },
            "runtimeArgs": ["--enable-source-maps"]
        }
    ]
}